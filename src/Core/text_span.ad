// TODO change to struct

public class Text_Span
{
	public let Start: int;
	public let Length: int;

	public new()
	{
		// TODO Needed for C++ default init
	}

	// @pre start+length doesn't overflow
	public new(start: int, length: int)
	{
		Start = start;
		Length = length;
	}

	// TODO get Property
	public End(self) -> int
	{
		return Start + Length;
	}
}

// TODO make this a named constructor
// @pre start <= end
public TextSpanFromTo(start: int, end: int) -> Text_Span
{
	return new Text_Span(start, end - start);
}

// TODO change to struct

public class Text_Span
{
    public let start: int;
    public let byte_length: int;

    // @pre start+length doesn't overflow
    public new(start: int, length: int)
    {
        self.start = start;
        byte_length = length;
    }

    // TODO get Property
    public End(self) -> int
    {
        return start + byte_length;
    }
}

public class Type
{
	public let kind: int;
	public let package: Package_Name?; // primitive types don't have a package
	public let namespace: Namespace_Name?; // primitive types don't have a namespace
	public let name: string;
	public let is_primitive: bool;
	public let is_value_type: bool;
	public let immutable: bool; // TODO need to distinguish if the type is inherently immutable

	public new(symbol: Symbol)
	{
		assert(symbol =/= none, "");
		package = none;
		namespace = none;
		name = symbol.name;
		is_primitive = symbol.is_primitive;
		is_value_type = symbol.declares_value_type();
		if is_value_type
			{ kind = ValueType; }
		else
			{ kind = ReferenceType; }
		immutable = true;
	}

	public new(kind: int, name: string, is_primitive: bool, is_value_type: bool, immutable: bool)
	{
		package = none;
		namespace = none;
		self.kind = kind;
		self.name = name;
		self.is_primitive = is_primitive;
		self.is_value_type = is_value_type;
		self.immutable = immutable;
	}

	public make_mutable(self) -> Type
	{
		return new Type(kind, name, is_primitive, is_value_type, false);
	}

	public make_immutable(self) -> Type
	{
		return new Type(kind, name, is_primitive, is_value_type, true);
	}

